{
    "name": "makamuevans/php-smpp",
    "type": "library",
    "description": "A PHP Package for SMPP Client",
    "keywords": [
        "makamuevans",
        "PhpSmpp"
    ],
    "homepage": "https://github.com/makamuevans/PhpSmpp",
    "license": "MIT",
    "authors": [
        {
            "name": "Makamu Evans",
            "email": "makamuevans@gmail.com",
            "homepage": "https://makamuevans.co.ke",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^8.0.2"
    },
    "require-dev": {
        "phpunit/phpunit" : "^9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "makamuevans\\PhpSmpp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "makamuevans\\PhpSmpp\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
